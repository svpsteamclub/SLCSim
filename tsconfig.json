{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./js",
        "sourceMap": true,
        "declaration": true,
        "allowJs": true,
        "checkJs": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "lib": ["ES2020", "DOM", "DOM.Iterable"]
    },
    "include": ["js/**/*"],
    "exclude": ["node_modules", "dist"]
} 